<openerp>
    <data>
          <record id="request_item_own_modify_rule" model="ir.rule">
              <field name="name">Managers / coordinators can modify their own report_entry, as long as the detailed_report haven't been accepted.</field>
              <field name="model_id" ref="model_bestja_report_entry"/>
              <field name="groups" eval="[(4, ref('base.group_user'))]"/>
              <field name="domain_force">[
                  ('detailed_report.state', '!=', 'accepted'),
                  '|',
                      ('detailed_report.project.manager', '=', user.id),
                      ('detailed_report.project.organization.coordinator', '=', user.id),
              ]</field>
              <field name="perm_read" eval="False"/>
              <field name="perm_write" eval="True"/>
              <field name="perm_create" eval="False"/>
              <field name="perm_unlink" eval="True"/>
          </record>
          
    </data>
</openerp>
